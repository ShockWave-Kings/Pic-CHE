<ScrollView
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:background="@color/P50"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/P50"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/header_text_size"
                android:text="@string/self_phrase_title"
                android:id="@+id/textView3"
                android:background="@color/P50" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/P50"
            android:layout_gravity="center_horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/hokkien"
                android:id="@+id/textViewHok" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:id="@+id/selfHokkien"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/P50"
            android:layout_gravity="center_horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/cantonese"
                android:id="@+id/textViewCan" />

            <EditText
                android:layout_width="202dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:id="@+id/selfCantonese"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/P50"
            android:layout_gravity="center_horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/chinese"
                android:id="@+id/textViewChi" />

            <EditText
                android:layout_width="271dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:id="@+id/selfChinese"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/P50"
            android:layout_gravity="center_horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/english"
                android:id="@+id/textViewEng" />

            <EditText
                android:layout_width="209dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:id="@+id/selfEnglish"
                android:layout_weight="1" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/selfAddPhoto"
            android:src="@drawable/add_photo"
            android:onClick="selfPhoto"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/self_add_phrase"
            android:id="@+id/button"
            android:textColor="@color/white"
            android:background="@drawable/custom_button"
            android:layout_gravity="center_horizontal"
            android:onClick="selfAdd"/>

    </LinearLayout>
</ScrollView><!-- From: file:/C:/Users/jeromeleow/android-studio/PIC-CHE/app/src/main/res/layout/fragment_new_phrase.xml -->