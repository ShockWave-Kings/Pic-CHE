<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/list_height"
    android:background="@color/P50"
    android:padding="2dip">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/help_letter"
        android:text="a"
        android:id="@+id/helpLetterTextView"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/help_secondary"
        android:text="ehk-sam-pel"
        android:id="@+id/helpExampleTextView"
        android:layout_marginRight="50dp"
        android:layout_alignTop="@+id/helpLetterTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/help_secondary"
        android:text="中文"
        android:id="@+id/helpChineseTextView"
        android:layout_alignBottom="@+id/helpLetterTextView"
        android:layout_alignRight="@+id/helpExampleTextView"
        android:layout_alignEnd="@+id/helpExampleTextView" />


</RelativeLayout>