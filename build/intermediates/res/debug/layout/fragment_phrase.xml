<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/phraseImageView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_launcher"
            android:padding="@dimen/list_padding"
            android:contentDescription="@string/pic_desc"/>

        <Button
            android:id="@+id/phraseHokButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColorHighlight="@color/P500"
            android:background="@drawable/custom_button"
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/list_padding"
            android:layout_marginBottom="@dimen/button_padding"
            android:layout_marginLeft="@dimen/list_padding"
            android:text="@string/hokkien" />

        <Button
            android:id="@+id/phraseCanButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button"
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/list_padding"
            android:layout_marginBottom="@dimen/button_padding"
            android:layout_marginLeft="@dimen/list_padding"
            android:text="@string/cantonese" />

        <Button
            android:id="@+id/phraseChiButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button"
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/list_padding"
            android:layout_marginBottom="@dimen/button_padding"
            android:layout_marginLeft="@dimen/list_padding"
            android:text="@string/chinese" />

        <Button
            android:id="@+id/phraseEngButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button"
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/list_padding"
            android:layout_marginBottom="@dimen/button_padding"
            android:layout_marginLeft="@dimen/list_padding"
            android:text="@string/english" />

        <Button
            android:id="@+id/phrasePlayAllButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button"
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/list_padding"
            android:layout_marginLeft="@dimen/list_padding"
            android:text="@string/play_all" />
        
    </LinearLayout>

</ScrollView><!-- From: file:/C:/Users/jeromeleow/workspace/PIC-CHE/res/layout/fragment_phrase.xml -->